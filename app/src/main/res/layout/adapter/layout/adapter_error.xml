<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_favorite_border_white_36dp"
        />

    <TextView
        android:id="@+id/activity_error_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_17"
        android:layout_below="@+id/activity_error_iv"
        android:gravity="center"
        android:textSize="@dimen/textSize"
        android:text="@string/activity_error"/>


</RelativeLayout>