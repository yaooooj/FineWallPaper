<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.open.finewallpaper.CoustomView.LoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />



    <Button
    android:id="@+id/button"
    android:text="Hit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/refresh_bt"
        android:text="refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.open.finewallpaper.CoustomView.MultiCharacterView
        android:id="@+id/multi_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

    </com.open.finewallpaper.CoustomView.MultiCharacterView>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#50000000"/>

    <com.open.finewallpaper.CoustomView.MultiCharacterView
        android:id="@+id/load_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

    </com.open.finewallpaper.CoustomView.MultiCharacterView>

    <com.open.finewallpaper.CoustomView.HeadingView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50000000"
        >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cornflowerblue"
            android:gravity="center"
            android:text="1111111111111111"
            android:textSize="32sp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/slateblue"
            android:gravity="center"
            android:text="222222222222222"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cornflowerblue"
            android:gravity="center"
            android:text="33333333"
            android:textSize="32sp"/>
    </com.open.finewallpaper.CoustomView.HeadingView>




</LinearLayout>