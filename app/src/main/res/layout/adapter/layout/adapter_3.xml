<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <ImageView
            android:id="@+id/adapter_3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_favorite_border_black_24dp"
            />

        <TextView
            android:id="@+id/adapter_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/adapter_3_iv"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/adapter_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/adapter_3_mtv"
            android:textSize="@dimen/textSize"
            />

</RelativeLayout>
