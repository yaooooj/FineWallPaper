<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    >
    <RelativeLayout
        android:id="@+id/ts_rvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightsteelblue"

        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/viewa_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            >
        </android.support.v7.widget.Toolbar>

        <com.open.finewallpaper.CustomView.Aaa
            android:id="@+id/heading_vp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="60dp"
            android:layout_below="@+id/viewa_tb"
            >
        </com.open.finewallpaper.CustomView.Aaa>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ts_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.open.finewallpaper.CustomView.ScrollBehavior"
        >

    </android.support.v7.widget.RecyclerView>



</android.support.design.widget.CoordinatorLayout>